# ===== App Environment =====
ENV=dev

# ===== Alerts / Filters =====
ALERT_THRESHOLD_PCT=1.0
ALERT_COOLDOWN_SEC=300
MIN_VOL_24H_USD=10000000
MIN_PRICE=0.001
DB_PATH=data/signals.db
TOP_N_REPORT=3

# Глобальний тумблер відправки алертів (true/false, 1/0)
ENABLE_ALERTS=true

# Переліки символів:
# Якщо ALLOW_SYMBOLS непорожній — алерти ТІЛЬКИ по цих символах.
# DENY_SYMBOLS — завжди ігноруються.
ALLOW_SYMBOLS=
DENY_SYMBOLS=

# ===== Telegram Bot =====
TELEGRAM__BOT_TOKEN=
TELEGRAM__ALERT_CHAT_ID=
# (необов'язково) якщо пусто — буде використано ALERT_CHAT_ID
TELEGRAM__REPORT_CHAT_ID=

# Плоскі ключі (новий Telegram-модуль)
TELEGRAM_ENABLED=1
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
TELEGRAM_COOLDOWN_SECONDS=30

# ===== Bybit API =====
BYBIT__API_KEY=
BYBIT__API_SECRET=

# ===== WebSocket (Phase 4.2: dual streams) =====
WS_ENABLED=1
WS_PUBLIC_URL_LINEAR=wss://stream.bybit.com/v5/public/linear
WS_PUBLIC_URL_SPOT=wss://stream.bybit.com/v5/public/spot
WS_SUB_TOPICS_LINEAR=tickers.BTCUSDT,tickers.ETHUSDT
WS_SUB_TOPICS_SPOT=tickers.BTCUSDT,tickers.ETHUSDT
WS_RECONNECT_MAX_SEC=30

# ===== CSV Export (Step 5.4) =====
# Кількість годин для експорту (якщо не задано через CLI)
EXPORT_LAST_HOURS=24
# Таймзона для експорту за замовчуванням (порожнє = UTC)
EXPORT_TZ=
# Папка для збереження CSV (якщо не задано через CLI)
EXPORT_DIR=exports
# Скільки останніх CSV зберігати (0 = без ротації)
EXPORT_KEEP=0
