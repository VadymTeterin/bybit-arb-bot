# ===== App Environment =====
ENV=dev

# ===== Alerts / Filters =====
ALERT_THRESHOLD_PCT=1.0
ALERT_COOLDOWN_SEC=300
MIN_VOL_24H_USD=10000000
MIN_PRICE=0.001
DB_PATH=data/signals.db
TOP_N_REPORT=3

# Global toggle for alerts (true/false, 1/0)
ENABLE_ALERTS=true

# Allow / Deny (CSV or JSON string)
ALLOW_SYMBOLS=
DENY_SYMBOLS=

# ===== Telegram (flat) =====
TELEGRAM_ENABLED=1
TELEGRAM_BOT_TOKEN=
TELEGRAM_ALERT_CHAT_ID=
TELEGRAM_COOLDOWN_SECONDS=30

# ===== Bybit API =====
# We accept either BYBIT__API_KEY or BYBIT_API_KEY
BYBIT__API_KEY=
BYBIT__API_SECRET=

# ===== WebSocket (dual streams) =====
WS_ENABLED=1
WS_PUBLIC_URL_LINEAR=wss://stream.bybit.com/v5/public/linear
WS_PUBLIC_URL_SPOT=wss://stream.bybit.com/v5/public/spot

# Subscribe to "tickers" (all) or specific symbols, e.g. tickers.BTCUSDT,tickers.ETHUSDT
WS_SUB_TOPICS_LINEAR=tickers
WS_SUB_TOPICS_SPOT=tickers

# ===== Export / Reports =====
EXPORT_LAST_HOURS=24
EXPORT_DIR=exports
EXPORT_KEEP=0
RT_LOG_PASSES=1
