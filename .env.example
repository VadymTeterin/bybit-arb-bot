# ===== App Environment =====
ENV=dev

# ===== Alerts / Filters =====
ALERT_THRESHOLD_PCT=1.0
ALERT_COOLDOWN_SEC=300
MIN_VOL_24H_USD=10000000
MIN_PRICE=0.001
DB_PATH=data/signals.db
TOP_N_REPORT=3

# Вмикач відправки алертів
ENABLE_ALERTS=true

# Переліки символів (опційно):
# Якщо ALLOW_SYMBOLS непорожній — алерти ТІЛЬКИ по цих символах.
# DENY_SYMBOLS — завжди ігноруються.
ALLOW_SYMBOLS=
DENY_SYMBOLS=

# ===== Telegram Bot =====
TELEGRAM__BOT_TOKEN=YOUR_TELEGRAM_BOT_TOKEN
TELEGRAM__ALERT_CHAT_ID=YOUR_ALERT_CHAT_ID
# Необов'язково: якщо пусто, буде використано ALERT_CHAT_ID
TELEGRAM__REPORT_CHAT_ID=

# ===== Bybit API (для приватних методів; для публічних не обов'язково) =====
BYBIT__API_KEY=
BYBIT__API_SECRET=

# ===== WebSocket (Phase 4.2: dual streams) =====
WS_ENABLED=0

# Окремі ендпойнти для linear та spot
WS_PUBLIC_URL_LINEAR=wss://stream.bybit.com/v5/public/linear
WS_PUBLIC_URL_SPOT=wss://stream.bybit.com/v5/public/spot

# Топіки: "tickers" або перелік конкретних: "tickers.BTCUSDT,tickers.ETHUSDT"
WS_SUB_TOPICS_LINEAR=tickers
WS_SUB_TOPICS_SPOT=tickers

# Максимальна затримка експоненціального backoff, сек
WS_RECONNECT_MAX_SEC=30
TELEGRAM_ENABLED=1
TELEGRAM_BOT_TOKEN=YOUR_TELEGRAM_BOT_TOKEN
TELEGRAM_CHAT_ID=YOUR_TELEGRAM_CHAT_ID
TELEGRAM_COOLDOWN_SECONDS=30
