# ===== App Environment =====
ENV=dev

# ===== Alerts / Filters =====
ALERT_THRESHOLD_PCT=1.0
ALERT_COOLDOWN_SEC=300
MIN_VOL_24H_USD=10000000
MIN_PRICE=0.001
DB_PATH=data/signals.db
TOP_N_REPORT=3

# Глобальний тумблер відправки алертів (true/false, 1/0)
ENABLE_ALERTS=true

# Переліки символів:
# Якщо ALLOW_SYMBOLS непорожній — алерти ТІЛЬКИ по цих символах.
# DENY_SYMBOLS — завжди ігноруються.
# Приклади:
#   ALLOW_SYMBOLS=BTCUSDT,ETHUSDT
#   DENY_SYMBOLS=SHITUSDT,DOGEUSDT
ALLOW_SYMBOLS=
DENY_SYMBOLS=

# ===== Telegram Bot =====
TELEGRAM__BOT_TOKEN=YOUR_TELEGRAM_BOT_TOKEN
TELEGRAM__ALERT_CHAT_ID=YOUR_CHAT_ID
# (необов'язково) якщо пусто — буде використано ALERT_CHAT_ID
TELEGRAM__REPORT_CHAT_ID=

# ===== Bybit API =====
BYBIT__API_KEY=your_key_here
BYBIT__API_SECRET=your_secret_here

# ===== WS (Phase 4: 4.1 skeleton) =====
# Вмикає WS-режим (0/1, false/true)
WS_ENABLED=0
# Публічний WS URL для linear інструментів (можемо змінити під час інтеграції)
WS_PUBLIC_URL=wss://stream.bybit.com/v5/public/linear
# Топіки підписки: "tickers" або конкретні "tickers.BTCUSDT,tickers.ETHUSDT"
WS_SUB_TOPICS=tickers
# Максимальна затримка backoff при перепідключенні, сек
WS_RECONNECT_MAX_SEC=30
